<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:OptimizerAvalonia.Templates">
    <Design.PreviewWith>
        <controls:ContentTemplate />
    </Design.PreviewWith>

    <!-- Define a style for the ContentTemplate control -->
    <Style Selector="controls|ContentTemplate">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="#393939"
                        CornerRadius="12"
                        Padding="15">
                    <!-- Use Content="{TemplateBinding Content}" to bind the content -->
                    <ContentPresenter Content="{TemplateBinding Content}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
