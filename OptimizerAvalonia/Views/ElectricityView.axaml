<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OptimizerAvalonia.Views.ElectricityView">
    <Grid RowDefinitions="Auto, *" Margin="20">
        
        <TextBlock Grid.Row="0" Margin="0 20" FontSize="20" FontWeight="Bold">Electricity Price</TextBlock>
        <Border Grid.Row="1">
            <Border.Effect><DropShadowEffect BlurRadius="10" Color="Black"></DropShadowEffect></Border.Effect>
           
        </Border>
    </Grid>
</UserControl>
