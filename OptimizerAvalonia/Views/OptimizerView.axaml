<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:OptimizerAvalonia.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OptimizerAvalonia.Views.OptimizerView">
    
    <Grid ColumnDefinitions="60*, 40*" Background="Red">
       <!-- Grid 2 -->
       <Grid Grid.Column="0" Background="LightGray" Width="">
           <views:graphView/>
       </Grid>
   
       <!-- Grid 3 -->
       <Grid Grid.Column="1" Width="">
         <Grid.RowDefinitions>
             <RowDefinition Height="50*"/>
             <RowDefinition Height="50*"/>
         </Grid.RowDefinitions>
   
         <!-- Grid Row 3.1 -->
         <Grid Grid.Row="0" Background="Lavender">
             <Grid.RowDefinitions>
             <RowDefinition Height="50*"/>
             <RowDefinition Height="50*"/>
         </Grid.RowDefinitions>
   
             <!--Grid Row 3.1.1 -->
             <Grid Grid.Row="0" Background="Gray">
             <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="75*"/>
                 <ColumnDefinition Width="25*"/>
             </Grid.ColumnDefinitions>
   
                 <!-- 3.1.1.1 -->
                 <Grid Grid.Column="0" Background="Purple">
                   <TextBlock Text="€ graph"/>
                 </Grid>
   
                  <!-- 3.1.1.2 -->
                 <Grid Grid.Column="1" Background="Green">
                   <TextBlock Text="total € numbers"/>
                 </Grid>
            </Grid>
   
             <!--Grid Row 3.1.2 -->
             <Grid Grid.Row="1" Background="Gray">
               <TextBlock Text="Emissions graph"/>
             </Grid>
   
         </Grid>
   
         <!-- Grid Row 3.2 -->
         <Grid Grid.Row="1" Background="Black">
           <!-- <views:boilersView/> ======================================================-->
           
           <!-- ====================================================== -->
         </Grid>
   
       </Grid>
     </Grid>
</UserControl>
